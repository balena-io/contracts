{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "$id": "hw.device-type.json",
  "type": "object",

  "allOf": [
    { "$ref": "contracts.json" },
    {
      "properties": {
        "data": {
          "type": "object",
          "properties": {
            "arch": {
              "type": "string",
              "pattern": "^[a-z0-9-]+$"
            },
            "hdmi": { "type": "boolean" },
            "connectivity": {
              "type": "object",
              "properties": {
                "bluetooth": { "type": "boolean" }
              }
            },
            "storage": {
              "type": "object",
              "properties": {
                "internal": { "type": "boolean" }
              }
            },
            "media": {
              "type": "object",
              "properties": {
                "installation": {
                  "type": "string",
                  "minLength": 1
                }
              }
            }
          },
          "required": [ "arch", "hdmi", "connectivity", "storage", "media" ]
        }
      },
      "required": [ "data" ]
    }
  ]
}
