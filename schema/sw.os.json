{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "$id": "sw.os.json",
  "type": "object",

  "definitions": {
    "requireItem": {
      "id": "#requireItem",
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "pattern": "^[a-z0-9-.]+$"
        },
        "slug": {
          "type": "string",
          "pattern": "^[a-z0-9-]+$"
        }
      }
    }
  },

  "allOf": [
    { "$ref": "contracts.json" },
    {
      "properties": {
        "data": {
          "type": "object",
          "properties": {
            "libc": {
              "type": "string",
              "minLength": 1
            }
          }
        },
        "requires": {
          "type": "array",
          "items": {
            "$ref": "#requireItem"
          }
        },
        "variants": {
          "type": "array",
          "items": {
            "allOf": [
              { "$ref": "contracts.json#baseContract" },
              {
                "properties": {
                  "requires": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "allOf": [
                        { "$ref": "#requireItem" },
                        {
                          "properties": {
                            "or": {
                              "type": "array",
                              "items": {
                                "$ref": "#requireItem"
                              }
                            }
                          }
                        }
                      ]
                    }
                  },
                  "variants": {
                    "type": "array",
                    "items": {
                      "$ref": "contracts.json#baseContract"
                    }
                  }
                }
              }
            ]
          }
        }
      },
      "required": [ "data", "requires" ]
    }
  ]
}
