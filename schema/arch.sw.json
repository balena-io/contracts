{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "$id": "arch.sw.json",
  "type": "object",

  "definitions": {
    "requireItem": {
      "id": "#requireItem",
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "pattern": "^[a-z0-9-.]+$"
        },
        "data": {
          "type": "object",
          "properties": {
            "arch": {
              "type": "string",
              "pattern": "^[a-z0-9-]+$"
            }
          }
        }
      }
    }
  },

  "allOf": [
    { "$ref": "contracts.json" },
    {
      "properties": {
        "requires": {
          "type": "array",
          "items": {
            "type": "object",
            "allOf": [
              { "$ref": "#requireItem" },
              {
                "properties": {
                  "or": {
                    "type": "array",
                    "items": {
                      "$ref": "#requireItem"
                    }
                  }
                }
              }
            ]
          }
        }
      },
      "required": [ "requires" ]
    }
  ]
}
