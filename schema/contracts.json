{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "$id": "contracts.json",
  "type": "object",

  "definitions": {
    "baseContract": {
      "id": "#baseContract",
      "type": "object",
      "properties": {
        "slug": {
          "type": "string",
          "pattern": "^[a-z0-9-]+$"
        },
        "version": {
          "type": "string",
          "minLength": 1
        },
        "type": {
          "type": "string",
          "pattern": "^[a-z0-9-.]+$"
        },
        "name": {
          "type": "string",
          "pattern": "^.*\\S.*$"
        }
      }
    }
  },

  "allOf": [
    { "$ref": "#baseContract" },
    {
      "required": [ "slug", "version", "type", "name" ]
    }
  ]
}
