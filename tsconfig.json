{
  "compilerOptions": {
    "module": "Node16",
    "moduleResolution": "node16",
    "outDir": "build",
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2022",
    "declaration": true,
    "skipLibCheck": true
  },
  "include": [
    "lib/**/*.ts",
    "tests/**/*.ts"
  ]
}
